<div class="container">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Tasks (ID)</th>
          <th scope="col">Tittle</th>
          <th scope="col">Description</th>
          <th scope="col">Status</th>
          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @tasks.each do |task| %>
          <% if task.user_id == current_user.id %>
            <tr>
              <td scope="row"><%= task.id%></td>
              <td><%= task.title %></td>
              <td><%= task.description %></td>
              <td><%= task.status%></td>
              <td><%= link_to "Edit", task_path(task), class: "btn btn-outline-primary btn-sm"%></td>
              <td><%= link_to "Delete", task_path(task), method: :delete, class: "btn btn-outline-danger btn-sm"%></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
